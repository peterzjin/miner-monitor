The sys.cfg should be something like:

{
	"SSID"		:	"xxx",
	"PASSWD"	:	"xxx",
	"HOSTNAME"	:	"xxx",
	"MQTT_SERVER"	:	"xxx",
	"MQTT_PORT"	:	xxx,
	"MQTT_TOPIC"	:	"xxx",
	"MQTT_USER"	:	"xxx",
	"MQTT_PASSWD"	:	"xxx",
	"SENSORS_MAP"   :       [x, y],
	"TTP_ADDR"      :       [x, y],
	"MINERS"	:	[
				{
					"IP_HOST"	:	"xxx",
					"PORT"		:	xxx,
					"ENABLED"	:	x,
					"TYPE"		:	x
				},
				...
				]
}
