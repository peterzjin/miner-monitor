The sys.cfg should be something like:

{
	"SSID"		:	"xxx",
	"PASSWD"	:	"xxx",
	"HOSTNAME"	:	"xxx",
	"MQTT"		:	{
					"ENABLED"	:	x,
					"SERVER"	:	"xxx.xxx.xxx.xxx",
					"PORT"		:	xxx,
					"TOPIC"		:	"xxx",
					"USER"		:	"xxx",
					"PASSWD"	:	"xxx"
				},
	"SENSORS"	:	{
					"ENABLED"	:	x,
					"MAP"		:	[x, y],
					"PIN"		:	"Dx"
				},
	"TTP"		:	{
					"ENABLED"	:	x,
					"PINS"		:	x,
					"VCC"		:	5.00,
					"0A_VAL"	:	512,
					"ADDR"		:	[x, y]
				},
	"DISPLAY"	:	{
					"ENABLED"	:	x,
					"OUTPUT"	:	[x, y]
				},
	"EXT_GPIO"	:	{
					"ENABLED"	:	x
				},
	"MINERS"	:	[
				{
					"IP_HOST"	:	"xxx.xxx.xxx.xxx",
					"PORT"		:	xxx,
					"ENABLED"	:	x,
					"TYPE"		:	x
				},
				...
				]
}
